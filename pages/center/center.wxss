.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.center-msg {
  text-align: center;
  font-size: 32rpx;
  padding: 20px 10px 10px 10px;
}
.center-msg text {
  display: block;
  margin-top: 10px;
}
.center-blog {
  font-size: 34rpx;
  color: blueviolet;
  text-decoration: underline;
}